<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_header"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/default_avatar" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#000000"
                android:textSize="17dp"
                tools:text="标题" />

            <TextView
                android:id="@+id/tv_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#757575"
                android:layout_marginTop="3dp"
                android:textSize="14dp"
                tools:text="标题" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="6dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            tools:src="@drawable/default_avatar" />

        <View
            android:layout_width="6dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            tools:src="@drawable/default_avatar" />

        <View
            android:layout_width="6dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            tools:src="@drawable/default_avatar" />

        <View
            android:layout_width="6dp"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_zan_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_zan_item"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="12dp"
            tools:text="点赞" />

        <TextView
            android:id="@+id/tv_see_num"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_see_tem"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="12dp"
            tools:text="看过" />

        <TextView
            android:id="@+id/tv_save_num"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_save_item"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="12dp"
            tools:text="收藏" />

        <TextView
            android:id="@+id/tv_comment_num"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_comment_item"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="12dp"
            tools:text="评论" />

    </LinearLayout>
</LinearLayout>